<?xml version="1.0" encoding="utf-8" ?>
<server>
	<log path="log" prefix="server" max_file_size="5">
		<dev console="yes" file="yes" sys="no"/>
		<inf console="yes" file="yes" sys="no"/>
		<wrn console="yes" file="yes" sys="no"/>
		<err console="yes" file="yes" sys="no"/>
	</log>

	<tcp port="10000" max_count="8000" accept_queue="4000" keep_alive="86400"/>
	<http port="10001"/>
  
	<farm host="127.0.0.1" port="6379"/>
	<router name="Echo" port="10002">
		<remote name="Echo" host="127.0.0.1" port="10002"/>
		<!-- <remote name="Router" host="127.0.0.1" port="40002"/> -->
	</router>
  
	<test host="127.0.0.1" port="10000" session_count="1" loop_count="1">
		<OnConnect param="param">
			<Send_Connect_Req/>
		</OnConnect>
		<OnDisconnect>
			<SendMsg msg_id="Send_Reconnect_Req"/>
			
		</OnDisconnect>
		<OnReceive msg_id="Recv_Connect_Ans">
			<Timer timer_id="timer_id" time="5000" callback="OnTimer"/>
		</OnReceive>
		<OnReceive msg_id="Recv_Connect_Ans2">
			<Close/>
		</OnReceive>
		<OnTime timer_id="timer_id">
			<SendMsg msg_id="XX"/>
			
		</OnTime>				
		<OnClose>
		</OnClose>
  </test>
</server>
